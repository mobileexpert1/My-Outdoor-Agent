<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/Map"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"/>


        <LinearLayout
            android:id="@+id/llLoginSignup"
            android:background="@color/white"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10ssp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvMapView"
                style="@style/MapButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Map" />

            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:alpha="0.1"
                android:background="@color/black"
                android:clickable="false"/>


            <TextView
                android:id="@+id/tvHybridView"
                style="@style/MapButtonStyle"
                android:layout_width="0dp"
                android:textColor="@color/account_tab_grey_text"
                android:background="@color/my_account_tab_grey"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hybrid" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/_30sdp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_40sdp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imvPlus"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:src="@drawable/plus">
        </ImageView>
        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:alpha="0.1"
            android:backgroundTint="@color/black"
            android:background="@color/greylr"
            android:clickable="false"/>

        <ImageView
            android:id="@+id/imvMinus"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:src="@drawable/minus">
        </ImageView>
    </LinearLayout>
</RelativeLayout>


