<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_2sdp"
        android:background="@color/property_light_white_green"
        android:orientation="vertical"
        android:elevation="@dimen/_1sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvExpandableListview"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="@string/adventure_seekers"
            android:textSize="@dimen/_9ssp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/ivClick"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_green_up_arrow"
            />
    </LinearLayout>
        <TextView
            android:id="@+id/tvExpandableListviewDescription"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:text="@string/description_lengthy"
            android:paddingHorizontal="@dimen/_10sdp"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>