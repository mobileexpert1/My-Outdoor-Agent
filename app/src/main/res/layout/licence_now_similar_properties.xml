<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_140sdp"
    android:layout_height="@dimen/_250sdp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llSimilarPropertiesItem"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llSearchHome"
            android:padding="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivSPImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:layout_weight="4"
                android:background="@drawable/corner_round_rectangle"
                android:clipToOutline="true"
                android:scaleType="fitXY"
                android:src="@drawable/layer_3" />
            <TextView
                android:id="@+id/tvSProperties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_4sdp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:gravity="left"
                android:text="@string/cass_taxas"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:textSize="@dimen/_9ssp" />

            <TextView
                android:id="@+id/tvDisplayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvSProperties"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="@string/nfs_who"
                android:textColor="@color/home_screen_grey"
                android:textSize="@dimen/_9ssp"
                android:maxLines="2"
                android:ellipsize="end"
                />

            <LinearLayout
                android:id="@+id/llViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@+id/llSearchHome"
                android:background="@drawable/green_button_shape"
                android:orientation="horizontal">

                <TextView
                    android:textSize="@dimen/_9ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_9sdp"
                    android:fontFamily="@font/nunito_sans_bold"
                    android:gravity="center"
                    android:text="@string/view_details"
                    android:textColor="@color/white" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>