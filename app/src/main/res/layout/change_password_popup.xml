<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/greylr">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border_shape"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/llCurrentPassword"
            style="@style/RectangleMyWalletBoxLayoutStyle"
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:orientation="vertical"
            android:layout_height="@dimen/_45sdp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_10sdp">

            <EditText
                android:id="@+id/edtCurrentPassword"
                style="@style/SmallGreyTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_11ssp"
                android:singleLine="true"
                android:hint="Current Password"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llNewPassword"
            style="@style/RectangleMyWalletBoxLayoutStyle"
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:orientation="vertical"
            android:layout_height="@dimen/_45sdp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_10sdp">

            <EditText
                android:id="@+id/edtNewPassword"
                style="@style/SmallGreyTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_11ssp"
                android:singleLine="true"
                android:hint="New Password"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llConfirmNewPassword"
            style="@style/RectangleMyWalletBoxLayoutStyle"
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:orientation="vertical"
            android:layout_height="@dimen/_45sdp"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/_10sdp">

            <EditText
                android:id="@+id/edtConfirmNewPassword"
                style="@style/SmallGreyTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:textSize="@dimen/_11ssp"
                android:singleLine="true"
                android:hint="Confirm New Password"
                android:textColor="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLoginSignup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_16sdp"
            android:paddingVertical="@dimen/_11sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvResetPassword"
                style="@style/GreenDialogButtonStyle"
                android:layout_width="0dp"
                android:padding="@dimen/_5sdp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_13sdp"
                android:textSize="@dimen/_10ssp"
                android:layout_weight="1"
                android:text="@string/reset_password" />

            <TextView
                android:id="@+id/tvCancelPwd"
                style="@style/WhiteDialogButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipToOutline="true"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textSize="@dimen/_10ssp"
                android:text="@string/cancel"
                android:textColor="@color/account_tab_grey_text"
                android:textStyle="" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>