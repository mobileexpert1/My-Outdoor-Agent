<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/profile_grey"
    android:background="@color/profile_grey"
    tools:context=".fragment.FrequentlyAskedQuestionsFragment">

    <include
        android:id="@+id/ilToolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/rlFaq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ilToolbar"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tvFaq"
            style="@style/MediumGreyTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="12dp"
            android:text="@string/faq"
            android:textColor="@color/black" />

    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/expandible_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlFaq"
        android:layout_marginVertical="@dimen/_10sdp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:groupIndicator="@null"
        android:childDivider="@null"
        android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorRight"
        android:listSelector="@android:color/transparent"
        android:paddingHorizontal="@dimen/_10sdp"
        android:scrollbars="none" />

</RelativeLayout>