<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:padding="@dimen/_16sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:background="@drawable/round_edges_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dialogTitleName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:gravity="center"
                    android:paddingLeft="@dimen/_12ssp"
                    android:text="Payment Failed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDiscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="@dimen/_18sdp"
                    android:layout_margin="@dimen/_8sdp"
                    android:text="Unable to process your payment."
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greylr"/>

                <TextView
                    android:id="@+id/okButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="OK"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_12ssp"
                    android:background="@drawable/login_register_shape_green"
                    android:textColor="@color/black"/>


            </LinearLayout>
        </ScrollView>

        <!---add your views here-->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>