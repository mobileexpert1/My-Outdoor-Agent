<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_bordered_background"
        android:orientation="vertical">

<!--        android:textAppearance="?attr/textAppearanceHeadline6"-->

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Account Deletion?"
            android:paddingVertical="@dimen/_12sdp"
            android:paddingHorizontal="@dimen/_14sdp"
            android:textSize="@dimen/_14ssp"
            android:background="@drawable/half_cut_rectangle"
            android:textColor="@color/white"
            android:gravity="left"
            android:textStyle="normal"/>

        <!-- Message -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="Are you sure you want to delete your MOA account? By deleting the account you will not have access to any historical activity from your leases, messages, members related to this account. Click Confirm below to delete your account."
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="@color/black"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"/>

        <!-- Confirmation Checkbox -->
        <CheckBox
            android:id="@+id/checkBoxConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I confirm"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="10dp"/>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:gravity="end"
            android:layout_marginTop="@dimen/_10sdp">

            <com.myoutdoor.agent.customviews.CustomDeleteButton
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Delete Account"
                android:textAllCaps="false"
                android:enabled="false"
                android:textSize="@dimen/_13ssp"
                android:paddingVertical="@dimen/_11sdp"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/_25sdp"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/darker_gray"
                android:text="Cancel"
                android:textAllCaps="false"
                android:paddingVertical="@dimen/_10sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="@android:color/white"
                android:paddingHorizontal="@dimen/_20sdp"/>

            <!--   <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Delete Account"
                android:enabled="false"
                android:textColor="@android:color/white"
                android:backgroundTint="@android:color/holo_red_dark"
                android:paddingHorizontal="20dp"/>


            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/darker_gray"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:paddingHorizontal="20dp"/>-->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

