<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llMainClick"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_3sdp"
        android:background="@drawable/white_border_shape"
        android:elevation="@dimen/_1sdp">
    <TextView
        android:id="@+id/tvWhiteBanner"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:textSize="@dimen/_10ssp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text="@string/adventure_seekers"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/ivMainDropDown"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:padding="@dimen/_10sdp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_green_dropdown"
        />

    </LinearLayout>

</LinearLayout>