<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:background="@drawable/corner_round_rectangle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/ivSeachImage"
                            android:layout_width="wrap_content"
                            android:layout_marginHorizontal="@dimen/_18sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:scaleType="centerCrop"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_logo">

                        </ImageView>

                        <TextView
                            android:id="@+id/tvHplPermitHead"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:text="@string/hpl_permit"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold">

                        </TextView>


                        <TextView
                            android:id="@+id/tvPermitCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llPermitHead"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:text="@string/clark_country"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="-5dp"
                            android:layout_marginLeft="-1dp"
                            android:orientation="horizontal"
                            android:padding="@dimen/_2sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:gravity="end"
                                android:text="@string/acres"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10ssp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tvPermitAcres"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/llAcres"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:paddingStart="@dimen/_3sdp"
                                android:text="@string/fouronefive"
                                android:textColor="@color/home_screen_grey"
                                android:textSize="@dimen/_10ssp" />


                        </LinearLayout>


                        <TextView
                            android:id="@+id/tvHplPermitPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:layout_toRightOf="@+id/rvHorizontalList"
                            android:fontFamily="@font/nunito_sans_bold"
                            android:gravity="end"
                            android:text="8"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="-8dp"
                        android:padding="@dimen/_10sdp"
                        android:weightSum="3">
                        <RelativeLayout
                            android:id="@+id/rlDetailsMarker"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.1"
                            android:background="@drawable/login_register_shape_green"
                            android:padding="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_toRightOf="@+id/imgMarkarrEye"
                                android:text="@string/view"
                                android:background="@null"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_9ssp"
                                android:maxLines="1"
                                android:singleLine="true" />

                            <ImageView
                                android:id="@+id/imgMarkarrEye"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_1sdp"
                                android:src="@drawable/showeye" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rlZoomMarker"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="0.9"
                            android:background="@drawable/login_register_shape_green"
                            android:padding="@dimen/_6sdp">

                            <TextView
                                android:id="@+id/tvZoomOutIn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_toRightOf="@+id/imgZoomInOut"
                                android:text="@string/Zoom_in"
                                android:background="@null"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_8ssp"
                                android:maxLines="1"
                                android:singleLine="true" />

                            <ImageView
                                android:id="@+id/imgZoomInOut"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:src="@drawable/zoomoutin" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rlDirectionsMarker"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/login_register_shape_green"
                            android:padding="@dimen/_6sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:layout_toRightOf="@+id/imgDirections"
                                android:text="@string/direction"
                                android:background="@null"
                                android:textSize="@dimen/_9ssp"
                                android:textColor="@color/white"
                                android:maxLines="1"
                                android:singleLine="true" />

                            <ImageView
                                android:id="@+id/imgDirections"
                                android:layout_width="@dimen/_10sdp"
                                android:layout_height="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:src="@drawable/direction" />

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>


            </ScrollView>



        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/imgCancelProperty"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:clickable="true"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_terms_cancel" />


</RelativeLayout>