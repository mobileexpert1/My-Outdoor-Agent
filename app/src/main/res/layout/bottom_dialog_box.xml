<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/greylr">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_border_shape"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">


        <LinearLayout
            android:id="@+id/llMyAccoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtAccountEnterFirstName"
                style="@style/RectangleMyWalletBoxLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:hint="First Name"
                android:inputType="text"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

            <EditText
                android:id="@+id/edtAccountEnterlastName"
                style="@style/RectangleMyWalletBoxLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:hint="Last Name"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSecondColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtAccountEnterEmail"
                style="@style/RectangleMyWalletBoxLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />


            <EditText
                android:id="@+id/edtstreetAddress"
                style="@style/RectangleMyWalletBoxLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:hint="Address"
                android:maxLines="1"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llThirdColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtCity"
                style="@style/RectangleMyWalletBoxLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:hint="City"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/pvStateName"
                style="@style/RectangleMyWalletBoxLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:hint="State"
                android:paddingHorizontal="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_11ssp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/green"
                app:spinner_divider_show="true"
                app:spinner_divider_size="0.4dp"
                app:spinner_item_array="@array/home_select_items"
                app:spinner_popup_animation="dropdown"
                app:spinner_popup_background="@color/white"
                app:spinner_popup_elevation="@dimen/_14sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llForthColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtAccountEnterPhoneNumber"
                style="@style/RectangleMyWalletBoxLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:maxLines="1"
                android:hint="Phone Number"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

            <EditText
                android:id="@+id/edtZipCode"
                style="@style/RectangleMyWalletBoxLayoutStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_weight="1"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:hint="Zip Code"
                android:paddingHorizontal="@dimen/_10sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llMyAccoutAddressTwo"
            style="@style/RectangleMyWalletBoxLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:elevation="0dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_10sdp">

            <EditText
                android:id="@+id/edtGroupClubName"
                style="@style/SmallGreyTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:hint="Club Name"
                android:maxLines="1"
                android:paddingLeft="@dimen/_3sdp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/_11ssp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLoginSignup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_19sdp"
            android:paddingVertical="@dimen/_11sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/tvSaveDialog"
                android:layout_width="0dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_20sdp"
                android:textSize="@dimen/_12ssp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background="@drawable/rounded_green_button"
                android:gravity="center|center_vertical"
                android:textAlignment="center"
                android:text="Update" />

            <TextView
                android:id="@+id/tvCancelDialog"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clipToOutline="true"
                android:fontFamily="@font/nunito_sans_semibold"
                android:background="@drawable/rounded_red_button"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/cancel"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:textStyle="" />

        </LinearLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>