<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginHorizontal="@dimen/_5sdp"
    android:layout_gravity="center"
    android:background="@color/white">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:background="@color/green"
                    android:textColor="@color/white"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_33sdp"
                    android:textSize="@dimen/_11ssp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/leave_us_a_message" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:orientation="vertical">





                    <EditText
                        android:id="@+id/edtLeaveUsMessage"
                        style="@style/RectangleMyWalletBoxLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@drawable/custom_bg_color"
                        android:gravity="start"
                        android:minLines="9"
                        android:padding="@dimen/_15sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/greylr"
                        android:textSize="@dimen/_11ssp"
                        android:textStyle="normal"
                        android:imeOptions="actionDone"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:paddingVertical="@dimen/_7sdp"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvSubmitMessage"
                            style="@style/GreenDialogButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:padding="@dimen/_8sdp"
                            android:textSize="@dimen/_11ssp"
                            android:layout_weight="1"
                            android:background="@drawable/login_register_shape_green"
                            android:gravity="center"
                            android:text="@string/submit" />

                        <TextView
                            android:id="@+id/tvCancelMessage"
                            style="@style/WhiteDialogButtonStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:padding="@dimen/_8sdp"
                            android:textSize="@dimen/_11ssp"
                            android:clipToOutline="true"
                            android:gravity="center"
                            android:text="@string/cancel"
                            android:textColor="@color/account_tab_grey_text"
                            android:textStyle="" />


                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!---add your views here-->
    </LinearLayout>

</LinearLayout>






</RelativeLayout>