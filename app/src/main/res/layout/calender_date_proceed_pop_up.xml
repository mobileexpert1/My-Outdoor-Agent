<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_20sdp"
    android:background="@color/white"
    >

    <RelativeLayout
        android:id="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        >

        <TextView
            android:id="@+id/tvSuccess"
            style="@style/SmallGreyTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center_horizontal"
            android:maxLines="10"
            android:padding="@dimen/_3sdp"
            android:text="Success "
            android:textColor="@color/black"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/tvResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSuccess"
            android:background="@drawable/corner_round_rectangle"
            android:gravity="center"
            android:padding="@dimen/_6sdp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/rlTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_58sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_9sdp"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/_7sdp">

        <TextView
            android:id="@+id/tvProceed"
            style="@style/GreenDialogButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:text="Proceed"
            android:textSize="@dimen/_10ssp" />

        <TextView
            android:id="@+id/tvCancel"
            style="@style/WhiteDialogButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToOutline="true"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/cancel"
            android:textColor="@color/account_tab_grey_text"
            android:textSize="@dimen/_10ssp"
            android:textStyle="" />

    </LinearLayout>

</RelativeLayout>