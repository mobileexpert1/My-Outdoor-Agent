<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Disabled state: Light red or faded red -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#FFCDD2"/> <!-- Faded red for disabled state -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Enabled state: Solid red -->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/holo_red_dark"/> <!-- Solid red for enabled state -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
